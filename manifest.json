{
	"manifest_version": 2,
	"name": "HN Imprecise words",
	"description": "This extension hihghlights a user defined list of words in hacernews comment pages",
	"version": "0.0.1",
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["https://news.ycombinator.com/item?id=*"],
			"css": ["plugin.css"],
			"js": ["underscore-min.js", "plugin.js"],
			"run-at": "document_idle"
		}
	],
	"permissions": [
		"https://secure.flicker.com/",
		"https://news.ycombinator.com/item?id=*"
	]
}
