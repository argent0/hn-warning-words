{
	"manifest_version": 2,
	"name": "HN Imprecise words",
	"description": "This extension hihghlights a user defined list of words in hacernews comment pages",
	"version": "0.0.1",
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["https://news.ycombinator.com/*"],
			"css": ["plugin.css"],
			"js": ["jquery-2.1.0.min.js", "underscore-min.js", "impreciseWordList.js", "plugin.js"],
			"run-at": "document_idle"
		}
	],
	"permissions": ["storage"]
}
